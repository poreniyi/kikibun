<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Results</title>
    <link rel='stylesheet' type="text/css" href='../../assets/StyleSheets/Results3Styles.css'>
</head>
<%- include ('partials/nav.ejs') %>

<body>
    <h1>Original</h1>
    <h3>You chose</h3><span>
 Chapter:<%=Chapter%>   and NLVL: <%=NLVL%>   
    </span>
    <p title ="Tool TOp">
        <%=original%>
    </p>
    <h2>Vocab</h2>
    <div class="box" id='Grammar'>
        <%vocab.forEach(element=>{ %>
            <div class=<%=element.POS%>>
                <%=element.text%>
            </div>
        <% })%>

    </div>
    <h2>Grammar</h2>
    <p class="Grammar">
        <div class="box">
            <% let counter =0%>
            <%data.forEach(element=> { %> 
                <%element.before.forEach(part=>{%>
                    <div class='before'><%=part.text%></div>
                    <% })%>
                    <div class="surface" name=<%=counter %>>
                        <%=element.surfaceForm%> 
                        <span class='tooltiptext'> <%=element.base%></span>
                    </div>
                    <%element.conjugatedParts.forEach(part =>{ %>
                        <div  title="Conjugation tooltip"class="conjugations"><%=part.text%></div>
                    <% })%>       
           <% }) %>
        </div>      
    </p>

    <h2>Info</h2>
